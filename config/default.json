{
  "connection": {
    "api": {
      "port": 3000,
      "uri": "http://api.dashboard.ask-project.eu"
    },
    "front": {
      "uri": "http://dashboard.ask-project.eu"
    }
  },
  "auth": {
    "secret": ""
  },
  "database": {
    "knex": {
      "client": "pg",
      "connection": {
        "host":     "localhost",
        "user":     "postgres",
        "password": "postgres",
        "database": "ask_dashboard",
        "port":     5432,
        "charset":  "utf8"
      },
      "pool": {
        "min": 2,
        "max": 10
      },
      "migrations": {
        "tableName": "migrations",
        "directory": "./server/database/migrations"
      },
      "seeds": {
        "directory": "./server/database/seeds"
      }
    }
  },
  "mail": {
    "transport": {
      "host": "smtp.gmail.com",
      "port": 465,
      "secure": true,
      "auth": {
        "user": "",
        "pass": ""
      }
    },
    "fromAddress": "dashboard@ask-project.eu",
    "templateDir": "./server/services/mail/templates"
  },
  "twitter": {
    "auth": {
      "consumer_key": "",
      "consumer_secret": "",
      "access_token": "",
      "access_token_secret": ""
    }
  },
  "klout": {
    "auth": "",
    "interval": 60000
  },
  "files": {
    "strategy": "local",
    "directory": "public/uploads"
  }
}
